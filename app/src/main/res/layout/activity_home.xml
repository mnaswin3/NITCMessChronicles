<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/lightgrey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aswin.nitcmesschronicles.HomeRevised">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/home_textview_above_listview"
        style="@style/normal_textview_style"
        android:layout_weight="2"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/lv_home"
        android:layout_weight="12">
    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/textview_above_addIcon"
        style="@style/normal_textview_style"
        android:layout_weight="2"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/imageview_addicon"
        android:background="@drawable/addicon512"
        style="@style/imageview_style"
        android:layout_weight="6"
        android:gravity="center"
        android:scaleType="fitCenter"/>

</LinearLayout>
